<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jaineek.meeplemain.MeepleMain"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_account_message"
        android:textSize="@dimen/text_size_title"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/between_padding"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_email_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/new_email_address" />

        <EditText
            android:id="@+id/register_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/new_password" />

        <EditText
            android:id="@+id/register_confirm_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/new_confirm_password" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title"
            android:ems="8"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/between_padding"
            android:drawableEnd="@drawable/arrow_right" />

        <TextView
            android:id="@+id/register_have_account_clickable"
            android:layout_width="wrap_content"
            android:text="@string/have_account_clickable"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/between_padding"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:onClick="onClick" />
        </LinearLayout>
</LinearLayout>

