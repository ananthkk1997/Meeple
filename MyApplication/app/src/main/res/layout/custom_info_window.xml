<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="@dimen/info_window_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/very_small_between_padding">

            <TextView
                android:id="@+id/marker_post_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginBottom="@dimen/very_small_between_padding"
                xmlns:tools="http://schemas.android.com/tools"
                tools:text="@string/new_post_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/very_small_between_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_18dp"
                    android:layout_marginRight="@dimen/very_small_between_padding" />

                <TextView
                    android:id="@+id/marker_post_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/very_small_between_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_18dp"
                    android:layout_marginRight="@dimen/very_small_between_padding" />

                <TextView
                    android:id="@+id/marker_post_location_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/marker_post_description_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginBottom="@dimen/very_small_between_padding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_post_going"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>


</LinearLayout>