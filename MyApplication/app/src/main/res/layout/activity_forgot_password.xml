<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_forgot_password"

    tools:context="com.example.jaineek.meeplemain.ForgotPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:text="Forgot your password? Send a confirmation email to change it!"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/small_between_padding"/>

    <EditText
        android:id="@+id/forgot_password_email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="@dimen/between_padding"
        android:hint="@string/new_email_address" />

    <Button
        android:id="@+id/forgot_password_send_email_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:layout_gravity="center"
        android:text="@string/send_email_forgot_password" />

</LinearLayout>
